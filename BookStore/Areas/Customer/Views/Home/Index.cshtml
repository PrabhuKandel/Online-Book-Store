@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
<div class="col-lg-3 col-md-4 col-sm-6 mb-3">
    <div class="card h-100 border-0 shadow-sm rounded-3" style="max-width: 260px; margin: auto;">
        <img src="@product.ImageUrl" class="card-img-top rounded-top" style="height: 160px; object-fit: contain;" alt="@product.Title" />

        <div class="card-body d-flex flex-column p-2">
            <h5 class="card-title text-center text-dark text-uppercase fw-semibold mb-1" style="font-size: 1rem;">@product.Title</h5>
            <p class="text-center text-secondary mb-2" style="font-size: 0.85rem;">by <strong>@product.Author</strong></p>

            <p class="text-center mb-1 text-muted" style="font-size: 0.8rem;">
                List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
            </p>
            <p class="text-center mb-3" style="font-size: 0.85rem;">
                <span class="text-dark">As low as: </span>
                <span class="fw-bold text-success">@product.Price100.ToString("c")</span>
            </p>

            <a asp-action="Details" asp-route-productId="@product.Id"
               class="btn btn-outline-dark mt-auto d-block w-100 py-1" style="font-size: 0.85rem;">
                <i class="bi bi-info-circle me-1"></i> View Details
            </a>
        </div>
    </div>
</div>

    }
</div>
